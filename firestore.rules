rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Reglas para perfiles de empresa
    match /company_profiles/{profileId} {
      allow read, write: if request.auth != null && request.auth.uid == profileId;
    }
    
    // Reglas para facturas
    match /invoices/{invoiceId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Reglas para pagos
    match /payments/{paymentId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Reglas para proyectos
    match /projects/{projectId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Reglas para clientes
    match /clients/{clientId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Reglas para estimados - igual que facturas
    match /estimates/{estimateId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Reglas para compras
    match /purchases/{purchaseId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Change Orders - Solo el propietario puede leer/escribir, pero permitir lectura pública por token
    match /changeOrders/{changeOrderId} {
      // El propietario puede hacer todo
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;

      // Permitir lectura pública para aprobación (sin autenticación)
      allow read: if true;

      // Permitir actualización sin restricciones (temporal para debug)
      allow update: if true;
    }
    
    // Reglas temporales más permisivas para desarrollo
    // TODO: Hacer más restrictivas en producción
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}